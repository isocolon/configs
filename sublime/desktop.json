{
	"bold_folder_labels": true,
	"caret_extra_width": 9,
	"caret_style": "phase",
	"draw_minimap_border": true,
	"font_face": "Fira Code Medium",
	"font_options":
	[
		"directwrite",
		"gray_antialias",
		"subpixel_antialias",
		"no_bold",
		"no_italic"
	],
	"font_size": 13,
	"highlight_line": true,
	"ignored_packages":
	[
		"ActionScript",
		"AppleScript",
		"ASP",
		"Clojure",
		"D",
		"Diff",
		"Erlang",
		"Go",
		"Graphviz",
		"Groovy",
		"Haskell",
		"LaTeX",
		"LINQPad",
		"Lisp",
		"Lua",
		"Makefile",
		"Matlab",
		"Objective-C",
		"OCaml",
		"Pascal",
		"Perl",
		"R",
		"Rails",
		"RestructuredText",
		"Rust",
		"Scala",
		"TCL",
		"Textile",
		"Vintage",
		"YAML",
	],
	"indent_guide_options":
	[
		"draw_normal",
		"draw_active",
	],
	"line_padding_bottom": 3,
	"line_padding_top": 3,
	"shift_tab_unindent": true,
	"word_wrap": true,
	"overlay_scroll_bars": "enabled",
	"always_show_minimap_viewport": true,
	// Highlight active indent
	/*"indent_guide_options": [ "draw_normal", "draw_active" ]*/
	"color_scheme": "Packages/Base16 Color Schemes/Themes/base16-summerfruit-light.tmTheme",
	"theme": "Default.sublime-theme",
}